<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/void_black"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textColor="@color/void_white"
        android:textSize="16sp"
        android:fontFamily="monospace"
        android:layout_marginBottom="8dp" />

    <!-- Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/void_white"
        android:layout_marginBottom="24dp" />

    <!-- Settings Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Homepage Apps Setting -->
            <LinearLayout
                android:id="@+id/homepageAppsOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/homepage_apps"
                    android:textColor="@color/void_white"
                    android:textSize="16sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/homepage_apps_desc"
                    android:textColor="@color/void_white"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:alpha="0.6"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/void_white"
                android:alpha="0.2" />

            <!-- Font Size Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/font_size"
                    android:textColor="@color/void_white"
                    android:textSize="16sp"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/font_size_desc"
                    android:textColor="@color/void_white"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:alpha="0.6"
                    android:layout_marginBottom="12dp" />

                <!-- Font Size Options -->
                <RadioGroup
                    android:id="@+id/fontSizeRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/fontSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/font_small"
                        android:textColor="@color/void_white"
                        android:fontFamily="monospace"
                        android:buttonTint="@color/void_white"
                        android:paddingVertical="8dp" />

                    <RadioButton
                        android:id="@+id/fontMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/font_medium"
                        android:textColor="@color/void_white"
                        android:fontFamily="monospace"
                        android:buttonTint="@color/void_white"
                        android:paddingVertical="8dp"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/fontLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/font_large"
                        android:textColor="@color/void_white"
                        android:fontFamily="monospace"
                        android:buttonTint="@color/void_white"
                        android:paddingVertical="8dp" />

                    <RadioButton
                        android:id="@+id/fontXLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/font_xlarge"
                        android:textColor="@color/void_white"
                        android:fontFamily="monospace"
                        android:buttonTint="@color/void_white"
                        android:paddingVertical="8dp" />
                </RadioGroup>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/void_white"
                android:alpha="0.2" />

            <!-- Hidden Apps Setting -->
            <LinearLayout
                android:id="@+id/hiddenAppsOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hidden_apps"
                    android:textColor="@color/void_white"
                    android:textSize="16sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hidden_apps_desc"
                    android:textColor="@color/void_white"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:alpha="0.6"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
