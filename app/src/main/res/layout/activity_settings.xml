<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/void_black"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textColor="@color/void_white"
        android:textSize="16sp"
        android:fontFamily="monospace"
        android:layout_marginBottom="8dp" />

    <!-- Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/void_white"
        android:layout_marginBottom="24dp" />

    <!-- Settings Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Font Size Setting -->
            <LinearLayout
                android:id="@+id/fontSizeOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/font_size"
                    android:textColor="@color/void_white"
                    android:textSize="16sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/font_size_desc"
                    android:textColor="@color/void_white"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:alpha="0.6"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/void_white"
                android:alpha="0.2" />

            <!-- Clock Settings -->
            <LinearLayout
                android:id="@+id/clockSettingsOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clock"
                    android:textColor="@color/void_white"
                    android:textSize="16sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show/hide date and customize clock"
                    android:textColor="@color/void_white"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:alpha="0.6"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/void_white"
                android:alpha="0.2" />

            <!-- Gestures Setting -->
            <LinearLayout
                android:id="@+id/gesturesOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gestures"
                    android:textColor="@color/void_white"
                    android:textSize="16sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Swipe on homepage to open apps"
                    android:textColor="@color/void_white"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:alpha="0.6"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/void_white"
                android:alpha="0.2" />

            <!-- Screen Time Setting -->
            <LinearLayout
                android:id="@+id/screenTimeOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Screen Time"
                    android:textColor="@color/void_white"
                    android:textSize="16sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View app usage and screen time"
                    android:textColor="@color/void_white"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:alpha="0.6"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/void_white"
                android:alpha="0.2" />

            <!-- Auto-Hide Setting -->
            <LinearLayout
                android:id="@+id/autoHideOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto-Hide Apps"
                    android:textColor="@color/void_white"
                    android:textSize="16sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hide apps by time schedule or usage limits"
                    android:textColor="@color/void_white"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:alpha="0.6"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/void_white"
                android:alpha="0.2" />

            <!-- Hidden Apps Setting -->
            <LinearLayout
                android:id="@+id/hiddenAppsOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hidden_apps"
                    android:textColor="@color/void_white"
                    android:textSize="16sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hidden_apps_desc"
                    android:textColor="@color/void_white"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:alpha="0.6"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/void_white"
                android:alpha="0.2" />

            <!-- Set as Default Launcher Setting -->
            <LinearLayout
                android:id="@+id/defaultLauncherOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set as Default Launcher"
                    android:textColor="@color/void_white"
                    android:textSize="16sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open system settings to set as default"
                    android:textColor="@color/void_white"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:alpha="0.6"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
