<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/void_black"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- App Name -->
    <TextView
        android:id="@+id/appNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App Name"
        android:textColor="@color/void_white"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/void_white"
        android:layout_marginBottom="16dp" />

    <!-- Usage Stats -->
    <TextView
        android:id="@+id/usageStatsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today's Usage:\n0m â€¢ 0 opens"
        android:textColor="@color/void_white"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:lineSpacingMultiplier="1.3" />

    <!-- Pin/Unpin Button -->
    <Button
        android:id="@+id/pinButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pin to Homepage"
        android:textColor="@color/void_white"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:background="?android:attr/selectableItemBackground"
        android:paddingVertical="12dp"
        android:layout_marginBottom="8dp" />

    <!-- Hide/Show Button -->
    <Button
        android:id="@+id/hideButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hide App"
        android:textColor="@color/void_white"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:background="?android:attr/selectableItemBackground"
        android:paddingVertical="12dp"
        android:layout_marginBottom="8dp" />

    <!-- Cancel Button -->
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/void_white"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:alpha="0.6"
        android:background="?android:attr/selectableItemBackground"
        android:paddingVertical="12dp" />

</LinearLayout>
